<div class="container px-5 px-sm-0">
  <div class="row">
   <%=render 'user_info' , user:@user , book:@Book%>

    <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
      <table>
        <thead>
          <tr>
            <th>images</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |f| %>
            <tr>
              <td>
                <%= link_to user_path(f) do %>
                  <%= image_tag(f.get_profile_image(80, 80), style: 'width:80px;height:80px;object-fit: cover;') %>
                <% end %>

              </td>

              </td>
              <td><%= f.name%></td>
              <td><%= link_to "Show" , user_path(f.id)%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>